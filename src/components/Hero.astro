// Hero section component
---

<section class="py-6 lg:py-8 bg-light-bg">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center gap-8 lg:gap-12">
      <!-- Hero Content -->
      <div class="flex-1 text-center lg:text-left">
        <h1 class="text-3xl lg:text-4xl xl:text-5xl font-bold text-primary mb-4 leading-tight">
          Conviértete en un profesional de oficio<br class="hidden lg:block" />
          con Escuelas IADE
        </h1>
        <p class="text-base lg:text-lg text-gray-700 mb-6 max-w-2xl">
          Formación práctica y rápida, 100% técnica, en modalidad 
          <strong class="text-primary">online</strong> y 
          <strong class="text-primary">presencial</strong>.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href="#lead-form" 
            class="bg-primary text-white px-6 py-3 rounded-lg font-bold text-base hover:bg-primary/90 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Contactame con un asesor
          </a>
          <a 
            href="https://www.escuelasiadearg.com/iade_campus_exp/login.php" 
            target="_blank" 
            rel="noopener noreferrer"
            class="bg-primary text-white px-6 py-3 rounded-lg font-bold text-base hover:bg-primary/90 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Acceder al Campus
          </a>
        </div>
      </div>

      <!-- Hero Image -->
      <div class="flex-1 flex justify-center lg:justify-end">
        <img 
          src="/images/logoiade.png" 
          alt="Cursos de oficios IADE" 
          class="max-w-sm lg:max-w-md xl:max-w-lg h-auto"
          loading="eager"
        />
      </div>
    </div>
  </div>
</section> 