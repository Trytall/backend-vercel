---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import CourseCatalog from '../../components/CourseCatalog.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Cursos | Escuelas IADE" description="Catálogo completo de cursos técnicos y de oficio de Escuelas IADE.">
  <Header />
  <main>
  <section class="pt-28 pb-16 bg-light-bg text-center">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-3xl lg:text-4xl font-bold text-primary mb-4">Catálogo Completo de Cursos</h1>
      <p class="text-lg text-gray-700">Explora todos nuestros cursos de oficio disponibles en modalidad online y presencial en nuestras sedes de Morón, Lomas de Zamora y Avellaneda.</p>
    </div>
  </section>
    <CourseCatalog />
  </main>
  <Footer />
</Layout>
